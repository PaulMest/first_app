
<h1>Listing Books</h1>
 
 <%= form_for Book.new, :url => "search" do |f| %>
  <%= f.label "Search" %>
  <%- f.text_field :title %>

<%- end %>

<table>
  <tr>
    <th>Title</th>
    <th>ASIN</th>
    <th></th>
    <th></th>
  </tr>
 
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.asin %></td>
    <td><%= link_to( "Show", { :action => 'show', :id => book.id}, :class => 'action show') %></td>
  </tr>
<% end %>
</table>
 
